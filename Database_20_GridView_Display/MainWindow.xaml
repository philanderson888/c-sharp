<Window x:Class="Database_20_GridView_Display.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Database_20_GridView_Display"
        mc:Ignorable="d"
        Title="MainWindow" Height="Auto" Width="Auto">

    <Grid>
        <DataGrid x:Name="DataGrid01" AutoGenerateColumns="False" Width="Auto" SelectionChanged="DataGrid01_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="CustomerID" Binding="{Binding CustomerID}" />
                <DataGridTextColumn Header="CustomerID" Binding="{Binding ContactName}" />
                <DataGridTextColumn Header="CustomerID" Binding="{Binding CompanyName}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
    
</Window>
